{
  "name": "Support Explorer Tool",
  "description": "Support Explorer Tool",
  "version": "1.2",
  "manifest_version": 3,

  "background": {
    "service_worker": "background.js"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "permissions": ["storage", "activeTab", "tabs", "identity"],

  "content_security_policy": {
    "extension_pages" : "script-src 'self'; connect-src 'self' https://algoindexer.algoexplorerapi.io/v2/ https://api.mainnet-beta.solana.com/ https://api.tzstats.com/explorer/op/; object-src 'self'"
 },

  "action": {
    "default_popup": "index.html",
    "default_icon": "SearchExo.png",
    "default_title":"Support Explorer Tool"
  },

   "icons":{
    "16": "SearchExo.png",
    "32": "SearchExo.png",
    "48": "SearchExo.png",
    "128": "SearchExo.png"
  },

  "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+K",
                "mac": "Command+K"
            }
        }
    }
}
