{
  "name": "Support Explorer Tool",
  "description": "Support Explorer Tool",
  "version": "1.1",
  "manifest_version": 3,

  "background": {
    "service_worker": "background.js"
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "permissions": ["storage", "activeTab", "tabs", "identity"],

  "action": {
    "default_popup": "index.html",
    "default_icon": "SearchExo.png",
    "default_title":"Support Explorer Tool"
  },

   "icons":{
    "16": "SearchExo.png",
    "32": "SearchExo.png",
    "48": "SearchExo.png",
    "128": "SearchExo.png"
  },

  "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+K",
                "mac": "Command+K"
            }
        }
    }
}
